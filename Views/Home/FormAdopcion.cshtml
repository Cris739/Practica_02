<body background="green">
    <h1>Formulario de adopcion</h1>
    <form method="POST">
        <div class="form-group">
            <label for=""> Nombre Completos</label>
            <input type="text" name="nombre_completo" class="form-control">
        </div>
        <div class="form-group">
            <label for="">tipo de mascota</label>
            <select class="form-control" id="" name="tipo_mascota">
                <option>Perro</option>
                <option>Gato</option>
            </select>
        </div>
        <div class="form-group">
            <label for="">Descripción del espacio disponible para la mascota</label>
            <textarea name="mensaje" id="" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for=""> teléfono</label>
            <input type="text" name="telefono" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Distrito</label>
            <select class="form-control" id="" name="distrito">
                <option>Distrito A</option>
                <option>Distrito B</option>
                <option>Distrito C</option>
                <option>Distrito D</option>
            </select>
            <div class="form-group">
                <label for=""> Dirección</label>
                <input type="text" name="direccion" class="form-control">
            </div>
            <button class="btn btn-primary">Enviar</button>
    </form>
</body>
